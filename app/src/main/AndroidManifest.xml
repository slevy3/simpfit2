<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.steve.simpfit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WelcomeScreen" />
        <activity
            android:name=".NewClient"
            android:label="@string/title_activity_new_client"
            android:parentActivityName=".WelcomeScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.steve.simpfit.WelcomeScreen" />
        </activity>
        <activity
            android:name=".NewSession"
            android:label="@string/title_activity_new_session"
            android:parentActivityName=".WelcomeScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.steve.simpfit.WelcomeScreen" />
        </activity>
        <activity
            android:name=".ViewUpcoming"
            android:label="@string/title_activity_view_upcoming"
            android:parentActivityName=".WelcomeScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.steve.simpfit.WelcomeScreen" />
        </activity>
        <activity
            android:name=".ViewClients"
            android:label="@string/title_activity_view_clients"
            android:parentActivityName=".WelcomeScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.steve.simpfit.WelcomeScreen" />
        </activity>
    </application>

</manifest>
